@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that
            data.
        </p>

        <div class="row">
            <div class="col-md-6">
                <form id="download-data" asp-page="DownloadPersonalData" method="post">
                    <input type="submit" value="Download" class="btn btn-outline-primary mb-3" />
                </form>
            </div>            
        </div>

        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>

        <div class="row">            
            <div class="col-md-6">
                <form id="download-data" asp-page="DeletePersonalData" method="get">
                    <input type="submit" value="Delete" class="btn btn-outline-danger mb-3" />
                </form>
            </div>
        </div>

       
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
