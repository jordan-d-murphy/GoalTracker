@model GoalTracker.Models.ActivityEntry

@{
    ViewData["Title"] = "Create Activity";
}

<div class="row mt-5 mb-5">
    <div class="col-6">
        <h1>Create New Activity</h1>
    </div>
</div>

<div class="row">

    <div class="col-md-2">
        <nav class="nav flex-column">
            <a asp-controller="ActivityEntry" asp-action="Index" class="nav-link">Back to Activities</a>
            <a asp-controller="Milestone" asp-action="Index" class="nav-link">Back to Milestones</a>
            <a asp-controller="Goal" asp-action="Index" class="nav-link">Back to Goals</a>
        </nav>
    </div>

    <div class="col-md-6">
        <h4>Activity</h4>
        <hr />
        <p>Goal: @Model?.Milestone?.Goal</p>
        <p>Goal Id: @Model?.Milestone?.GoalId</p>
        <p>Goal Title: @Model?.Milestone?.Goal?.Title</p>
        <p>Goal Desc: @Model?.Milestone?.Goal?.Description</p>
        <hr />
        <p>Milestone: @Model?.Milestone</p>
        <p>Milestone Id: @Model?.MilestoneId</p>
        <p>Milestone Title: @Model?.Milestone?.Title</p>
        <p>Milestone Desc: @Model?.Milestone?.Description</p>
        <hr />
        <form asp-controller="ActivityEntry" asp-action="CreatePost">

            <input type="hidden" asp-for="MilestoneId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TargetDate" class="control-label"></label>
                <input asp-for="TargetDate" class="form-control" value="mm/dd/yyyy"/>
                <span asp-validation-for="TargetDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 float-end">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
