@model GoalTracker.Models.ActivityEntry

<div class="offcanvas offcanvas-end" tabindex="-1" id="offCanvas_ActivityDelete_@Model.Id"
    aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header">
        <h1 class="offcanvas-title" id="offcanvasRightLabel">Delete Activity</h1>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body" id="offcanvas-body">

        <div class="alert alert-primary alert-dismissible fade show" role="alert">
            <strong>Goal @Model?.Milestone?.GoalId: @Model?.Milestone?.Goal?.Title</strong>
            @Model?.Milestone?.Goal?.Description
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <div class="alert alert-secondary alert-dismissible fade show" role="alert">
            <strong>Goal @Model?.MilestoneId: @Model?.Milestone?.Title</strong> @Model?.Milestone?.Description
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>


        <div class="alert alert-danger d-flex align-items-center py-0" role="alert">
            <i class="bi-exclamation-triangle-fill" style="font-size: 1rem; color: #dc3545;"></i>
            Are you sure you want to delete this Activity?
        </div>

        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <div class="row">
                <div class="col">
                    <dt>
                        @Html.DisplayNameFor(model => model.CreatedDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CreatedDate)
                    </dd>
                </div>
                <div class="col">
                    <dt>
                        @Html.DisplayNameFor(model => model.TargetDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.TargetDate)
                    </dd>
                </div>
                <div class="col">
                    <dt>
                        @Html.DisplayNameFor(model => model.CompletedDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CompletedDate)
                    </dd>
                </div>
            </div>




            <dt>
                @Html.DisplayNameFor(model => model.Completed)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Completed)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Category)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Icon)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Icon)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Color)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Color)
            </dd>
        </dl>

        <div class="form-group mb-3 float-end">
            <form asp-controller="ActivityEntry" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-outline-danger" />
            </form>
        </div>
    </div>
