@model GoalTracker.Models.ActivityEntry

<div class="offcanvas offcanvas-end" tabindex="-1" id="offCanvas_ActivityCreate_@Model.MilestoneId" aria-labelledby="offcanvasRightLabel">
            <div class="offcanvas-header">
                <h1 class="offcanvas-title" id="offcanvasRightLabel">Create Activity</h1>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body" id="offcanvas-body">
              
        
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
            <strong>Goal @Model?.Milestone?.GoalId: @Model?.Milestone?.Goal?.Title</strong> @Model?.Milestone?.Goal?.Description
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <div class="alert alert-secondary alert-dismissible fade show" role="alert">
            <strong>Goal @Model?.MilestoneId: @Model?.Milestone?.Title</strong> @Model?.Milestone?.Description
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

       
       
        <form asp-controller="ActivityEntry" asp-action="CreatePost">

            <input type="hidden" asp-for="MilestoneId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TargetDate" class="control-label"></label>
                <input asp-for="TargetDate" class="form-control" value="mm/dd/yyyy"/>
                <span asp-validation-for="TargetDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Color" class="control-label">Color Picker</label>
                <input asp-for="Color" type="color" class="form-control form-control-color" 
                    id="activityColorInputCreate" value="#563d7c" title="Choose your color">
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ColorSuggestions" class="control-label"></label>
                <div class="row">
                    @if (@Model!.ColorSuggestions != null) 
                    {
                        @foreach (var c in @Model!.ColorSuggestions) 
                        {                                            
                            <input asp-for="ColorSuggestions" type="color" class="form-control form-control-color d-inline mx-3 colorSuggestion" 
                                id="activityColorSuggestion_@c.Value" value="@c.Value" data-value="@c.Value" data-targetId="activityColorInputCreate" title="Suggestion">                                                   
                        } 
                    }                    
                </div>    
            </div>      
            <div class="form-group mb-3 float-end">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
