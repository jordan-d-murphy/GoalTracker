@model GoalTracker.Models.Billing

<div class="offcanvas offcanvas-end" tabindex="-1" id="offCanvas_BillingEdit_@Model.Id" aria-labelledby="offcanvasRightLabel">
            <div class="offcanvas-header">
                <h1 class="offcanvas-title" id="offcanvasRightLabel">Edit Billing</h1>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body" id="offcanvas-body">
            
                        
                        <form asp-controller="Billing" asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            
                            <div class="form-group mb-3">
                                <label asp-for="User" class="control-label"></label>
                                <input asp-for="User" class="form-control" />
                                <span asp-validation-for="User" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Subscription" class="control-label"></label>
                                <input asp-for="Subscription" class="form-control" />
                                <span asp-validation-for="Subscription" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group mb-3">
                                        <label asp-for="BillingDate" class="control-label"></label>
                                        <input asp-for="BillingDate" class="form-control" />
                                        <span asp-validation-for="BillingDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group mb-3">
                                        <label asp-for="DueDate" class="control-label"></label>
                                        <input asp-for="DueDate" class="form-control" />
                                        <span asp-validation-for="DueDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group mb-3">
                                        <label asp-for="PaidDate" class="control-label"></label>
                                        <input asp-for="PaidDate" class="form-control" />
                                        <span asp-validation-for="PaidDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>       
                           
                            

                            <div class="form-group form-check mb-3">
                                <label class="form-check-label">
                                    @Html.DisplayNameFor(model => model.Paid)
                                    <input class="form-check-input" asp-for="Paid" />                    
                                </label>
                            </div>
                            <div class="form-group mb-3 float-end">
                                <input type="submit" value="Save" class="btn btn-outline-primary" />
                            </div>
                        </form>
              

              
            @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
            }



            </div>
        </div>