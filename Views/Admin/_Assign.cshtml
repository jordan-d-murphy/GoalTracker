@model AdminAssign

<a class="nav-link float-end" href="" data-bs-toggle="modal" data-bs-target="#adminAssignModal_@Model.UserId">Assign New Role</a>


<div class="modal fade" id="adminAssignModal_@Model.UserId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Add Role for @Model.UserEmail</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
         <form asp-controller="Admin" asp-action="Assign" id="adminAssign_@Model.UserId">
            <input type="hidden" asp-for="UserId" />

            <input class="form-control autocomplete autocompleteAssignRoleInput" autocomplete="off" id="autocompleteAssignRoleInput_@Model.UserId" asp-for="Role" />

            <a class="nav-link float-end" href="javascript:$('#adminAssign_@Model.UserId').submit();">Assign</a>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>