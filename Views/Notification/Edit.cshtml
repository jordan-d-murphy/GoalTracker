@model Notification

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Notification</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MessageBody" class="control-label"></label>
                <input asp-for="MessageBody" class="form-control" />
                <span asp-validation-for="MessageBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SentTimestamp" class="control-label"></label>
                <input asp-for="SentTimestamp" class="form-control" />
                <span asp-validation-for="SentTimestamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveredTimestamp" class="control-label"></label>
                <input asp-for="DeliveredTimestamp" class="form-control" />
                <span asp-validation-for="DeliveredTimestamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReadTimestamp" class="control-label"></label>
                <input asp-for="ReadTimestamp" class="form-control" />
                <span asp-validation-for="ReadTimestamp" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Read" /> @Html.DisplayNameFor(model => model.Read)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GeneratedByApplication" /> @Html.DisplayNameFor(model => model.GeneratedByApplication)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

