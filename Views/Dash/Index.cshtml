@* @model IEnumerable<GoalTracker.Models.Dash> *@
@model IEnumerable<GoalTracker.Models.DashIndexViewModel>


@{
    ViewData["Title"] = "Index";
}

<h1>Dashboards</h1>

<ul class="nav">

    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="offcanvas" href="#offCanvas_DashCreate">
            <i class="bi-plus-circle" style="font-size: 1rem; color: #0077cc;"></i>Create New Dashboard
        </a>
        @await Html.PartialAsync("~/Views/Dash/OffCanvas/_DashCreate.cshtml", new Dash() { })
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="DashViz" asp-action="Index">
            <i class="bi-graph-up" style="font-size: 1rem; color: #0077cc;"></i>DashViz
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="VizType" asp-action="Index">
            <i class="bi-file-earmark-bar-graph" style="font-size: 1rem; color: #0077cc;"></i>VizType
        </a>
    </li>
</ul>



<div class="col-md-10 offset-md-1">
    <div class="row g-0">

        @foreach (var divm in Model)
        {

            @if (divm.Dashboard is not null && divm.CreatedUser is not null)
            {



                <div class="pt-3 pe-3 col-md-6">

                    <div class="card" style="height: 14rem;">
                        <div class="card-header">
                            <h5 class="card-title">


                                @Html.DisplayFor(modelItem => divm.Dashboard.Title)
                                @if (@divm.Dashboard.Favorited)
                                {
                                    <i class="bi-star-fill" style="font-size: 1rem; color: #0077cc;"></i>
                                }
                                else
                                {
                                    <i class="bi-star" style="font-size: 1rem; color: #0077cc;"></i>
                                }

                            </h5>
                        </div>
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-body-secondary">@Html.DisplayFor(modelItem =>
                        divm.Dashboard.Name)</h6>
                            <p class="card-text">
                                @Html.DisplayFor(modelItem => divm.Dashboard.Description)
                                @Html.DisplayFor(modelItem => divm.CreatedUser.Email)
                                @Html.DisplayFor(modelItem => divm.CreatedUser.Id)
                                @Html.DisplayFor(modelItem => divm.Dashboard.CreatedDate)

                            </p>


                        </div>
                        <div class="card-footer">


                            <a class="card-link align-bottom" data-bs-toggle="offcanvas"
                                href="#offCanvas_DashDetails_@divm.Dashboard.Id">
                                <i class="bi-card-text" style="font-size: 1rem; color: #0077cc;"></i>Details
                            </a>
                            @await Html.PartialAsync("~/Views/Dash/OffCanvas/_DashDetails.cshtml", @divm.Dashboard)


                            <a class="card-link align-bottom" data-bs-toggle="offcanvas"
                                href="#offCanvas_DashEdit_@divm.Dashboard.Id">
                                <i class="bi-pen" style="font-size: 1rem; color: #0077cc;"></i>Edit
                            </a>
                            @await Html.PartialAsync("~/Views/Dash/OffCanvas/_DashEdit.cshtml", @divm.Dashboard)


                            <a class="" data-bs-toggle="offcanvas" href="#offCanvas_DashDelete_@divm.Dashboard.Id">
                                <i class="bi-trash3" style="font-size: 1rem; color: #0077cc;"></i> Delete
                            </a>
                            @await Html.PartialAsync("~/Views/Dash/OffCanvas/_DashDelete.cshtml", @divm.Dashboard)


                        </div>
                    </div>

                </div>
            }

        }
    </div>
</div>
