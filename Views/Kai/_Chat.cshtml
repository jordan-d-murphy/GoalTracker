@model Kai

<button type="button" class="btn btn-outline-success" data-bs-toggle="collapse" href="#kaiChat" id="kaiChatStart">
  Let's get started
</button>


<div class="collapse" id="kaiChat">
  <div id="chat" class="p-3" style="height: 500px; overflow-y: scroll;">
    <div class="card card-body text-start me-auto mb-3"
      style="max-width: 80%; background-color: #D7F0F4; color: black !important;">
      Hi, I'm Kai. What do you want to do? For example you can say, create a workout plan, or design a roadmap for
      getting a new job.
    </div>
  </div>



  <div class="card card-body text-start ms-auto mt-3 mb-3" style="max-width: 80%;">
    <input id="kaiChatInput" class="form-control" placeholder="Type here, press Enter to send message." />
  </div>
</div>
