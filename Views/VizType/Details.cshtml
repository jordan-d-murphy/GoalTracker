@model GoalTracker.Models.VizType

@{
    ViewData["Title"] = "Details";
}

<h1>VizType | @Model.Title</h1>

<ul class="nav">
    <li class="nav-item">
        <a class="nav-link" asp-controller="VizType" asp-action="Index">
            <i class="bi-arrow-left-square" style="font-size: 1rem; color: #0077cc;"></i>Back
        </a>
    </li>
</ul>

    <div class="row">
        <dl class="m-3 p-3">            
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>



     <div class="row justify-content-around">

        <div class="col-md-10 offset-md-1 m-3 p-3" style="min-height: 550px;">
            <canvas id="chartCanvas"></canvas>
        </div>
    </div>


@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    @if (Model is not null)
    {
        <script src="~/js/chart_js/@(Model.Name).js" asp-append-version="true"></script>
    }

