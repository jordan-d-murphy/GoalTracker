
@model IEnumerable<GoalTracker.Models.MetricType>

@{
    ViewData["Title"] = "Index";
}

<h1>MetricType</h1>

<ul class="nav">

    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="offcanvas" href="#offCanvas_MetricTypeCreate">
        <i class="bi-plus-circle" style="font-size: 1rem; color: #0077cc;"></i>Create New MetricType
    </a>
    @await Html.PartialAsync("~/Views/MetricType/OffCanvas/_MetricTypeCreate.cshtml", new MetricType() { })
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Metric" asp-action="Index">
            <i class="bi-database-dash" style="font-size: 1rem; color: #0077cc;"></i>Metrics
        </a>
    </li>   
</ul>


<div class="col-md-10 offset-md-1">
    <div class="row g-0">

        @foreach (var metricType in Model)
        {


            
            <div class="pt-3 pe-3 col-md-6">

                <div class="card" style="height: 18rem;">
                    <div class="card-header">
                        <h5 class="card-title">
                            @Html.DisplayFor(modelItem => metricType.Title)                        
                        </h5>
                    </div>
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-body-secondary">@Html.DisplayFor(modelItem => metricType.Description)</h6>
                                            
                        <p class="card-text">@metricType.CreatedBy?.Email</p>
                        <p class="card-text">@metricType.CreatedBy?.Id</p>
                        <p class="card-text">@metricType.CreatedDate</p>
                    </div>
                    <div class="card-footer">


                        <a class="card-link align-bottom" data-bs-toggle="offcanvas" href="#offCanvas_MetricTypeDetails_@metricType.Id">
                            <i class="bi-card-text" style="font-size: 1rem; color: #0077cc;"></i>Details                        
                        </a>
                        @await Html.PartialAsync("~/Views/MetricType/OffCanvas/_MetricTypeDetails.cshtml", metricType)


                        <a class="card-link align-bottom" data-bs-toggle="offcanvas" href="#offCanvas_MetricTypeEdit_@metricType.Id">
                            <i class="bi-pen" style="font-size: 1rem; color: #0077cc;"></i>Edit                        
                        </a>
                        @await Html.PartialAsync("~/Views/MetricType/OffCanvas/_MetricTypeEdit.cshtml", metricType)
                                                    

                        <a class="" data-bs-toggle="offcanvas" href="#offCanvas_MetricTypeDelete_@metricType.Id">
                            <i class="bi-trash3" style="font-size: 1rem; color: #0077cc;"></i> Delete
                        </a>
                        @await Html.PartialAsync("~/Views/MetricType/OffCanvas/_MetricTypeDelete.cshtml", metricType)


                    </div>
                </div>
            </div>
        }
    </div>
</div>
